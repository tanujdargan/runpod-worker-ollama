# Environment variables for Pear Care Unified Container
# Copy this file to .env and fill in your values

# OpenAI API Configuration
OPENAI_API_KEY=your_openai_api_key_here

# OpenAI Connection Configuration (optional - defaults provided)
OPENAI_REQUEST_TIMEOUT=30.0
OPENAI_MAX_RETRIES=3
OPENAI_CONNECTION_POOL_SIZE=100
OPENAI_MAX_CONNECTIONS_PER_HOST=10
OPENAI_KEEPALIVE_TIMEOUT=30
OPENAI_RETRY_BACKOFF=0.5

# Authentication Configuration
VERCEL_API_SECRET=your_vercel_api_secret_here
JWT_SECRET_KEY=your_jwt_secret_key_here

# Ollama Configuration
OLLAMA_BASE_URL=http://localhost:11434
OLLAMA_MODEL=medgemma:27b

# RunPod Connection Configuration (optional - defaults provided)
RUNPOD_REQUEST_TIMEOUT=30.0
RUNPOD_MAX_RETRIES=3
RUNPOD_CONNECTION_POOL_SIZE=100
RUNPOD_MAX_CONNECTIONS_PER_HOST=10
RUNPOD_KEEPALIVE_TIMEOUT=30
RUNPOD_RETRY_BACKOFF=0.5
RUNPOD_CIRCUIT_BREAKER_THRESHOLD=5
RUNPOD_CIRCUIT_BREAKER_TIMEOUT=60

# CORS Configuration
ALLOWED_ORIGINS=*

# FastAPI Server Configuration
HOST=0.0.0.0
PORT=8000
UVICORN_WORKERS=4
UVICORN_WORKER_CLASS=uvicorn.workers.UvicornWorker
LOG_LEVEL=info
ACCESS_LOG=true
RELOAD=false
KEEPALIVE=5
MAX_REQUESTS=1000
MAX_REQUESTS_JITTER=50
TIMEOUT_KEEP_ALIVE=5
TIMEOUT_GRACEFUL_SHUTDOWN=30

# Application Configuration
MAX_CONCURRENT_REQUESTS=10
RATE_LIMIT_PER_HOUR=1000

# Model Configuration
DEFAULT_MAX_TOKENS=4096
DEFAULT_TEMPERATURE=0.7
